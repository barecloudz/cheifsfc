generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Team {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  shortName   String?
  logo        String?
  manualWon   Int      @default(0)
  manualDrawn Int      @default(0)
  manualLost  Int      @default(0)
  manualGF    Int      @default(0)
  manualGA    Int      @default(0)
  homeMatches Match[]  @relation("HomeTeam")
  awayMatches Match[]  @relation("AwayTeam")
}

model Match {
  id           Int               @id @default(autoincrement())
  date         DateTime
  venue        String
  homeTeamId   Int
  awayTeamId   Int
  homeScore    Int?
  awayScore    Int?
  cancelled    Boolean           @default(false)
  cancelReason String?
  homeTeam     Team              @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam     Team              @relation("AwayTeam", fields: [awayTeamId], references: [id])
  events       MatchEvent[]
  appearances  MatchAppearance[]
  highlights   Highlight[]
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
}

model MatchEvent {
  id       Int     @id @default(autoincrement())
  matchId  Int
  match    Match   @relation(fields: [matchId], references: [id], onDelete: Cascade)
  playerId Int?
  player   Player? @relation(fields: [playerId], references: [id], onDelete: SetNull)
  type     String  // goal, assist, yellow_card, red_card, motm
  minute   Int?
  notes    String?
}

model MatchAppearance {
  id       Int    @id @default(autoincrement())
  matchId  Int
  match    Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)
  playerId Int
  player   Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([matchId, playerId])
}

model Highlight {
  id        Int      @id @default(autoincrement())
  title     String
  videoUrl  String
  thumbnail String?
  matchId   Int?
  match     Match?   @relation(fields: [matchId], references: [id], onDelete: SetNull)
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Player {
  id                Int                @id @default(autoincrement())
  name              String
  position          String
  number            Int?
  imageUrl          String?
  pace              Int                @default(50)
  shooting          Int                @default(50)
  passing           Int                @default(50)
  dribbling         Int                @default(50)
  defending         Int                @default(50)
  physical          Int                @default(50)
  cardType          String             @default("default")
  pin               String?
  pointBalance      Int                @default(0)
  pointsEarned      Int                @default(0)
  pointsSpent       Int                @default(0)
  unlockedCardTypes String             @default("[]")
  createdAt         DateTime           @default(now())
  rsvps             TrainingRsvp[]
  pointTransactions PointTransaction[]
  matchEvents       MatchEvent[]
  appearances       MatchAppearance[]
}

model PointTransaction {
  id          Int      @id @default(autoincrement())
  playerId    Int
  player      Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  amount      Int
  type        String
  description String
  createdAt   DateTime @default(now())
}

model Training {
  id        Int              @id @default(autoincrement())
  date      DateTime
  location  String
  notes     String?
  completed Boolean          @default(false)
  rsvps     TrainingRsvp[]
  createdAt DateTime         @default(now())
}

model TrainingRsvp {
  id         Int      @id @default(autoincrement())
  trainingId Int
  training   Training @relation(fields: [trainingId], references: [id], onDelete: Cascade)
  playerId   Int
  player     Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  status     String   @default("none")
  attended   Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@unique([trainingId, playerId])
}

model SiteSettings {
  id                Int      @id @default(1)
  teamPhotoUrl      String?
  playerCardsOn     Boolean  @default(false)
  cardTypes         String   @default("[]")
  pointsPerTraining Int      @default(10)
  upgradeCost       Int      @default(10)
  showGoalScorers   Boolean  @default(true)
  showHighlights    Boolean  @default(true)
  showPlayerStats   Boolean  @default(true)
  showMotm          Boolean  @default(true)
  showStreaks        Boolean  @default(true)
  showLevels        Boolean  @default(true)
  motmPoints        Int      @default(15)
  streakBonus3      Int      @default(5)
  streakBonus5      Int      @default(10)
  streakBonus10     Int      @default(25)
}
